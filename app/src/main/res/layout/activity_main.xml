<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mnscrgradient"/>


    <Button
        android:id="@+id/clickbutton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:text="Save Water Now!!!"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:paddingBottom="23dp"
        android:text="Around 153,327,787,464 litres everyday,"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:textColor="#306809"
        android:textSize="35sp"
        android:textStyle="italic"


        />

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="around 6,388,657,811 every hour,"
        android:textAlignment="center"
        android:textColor="#306809"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hour"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="and around 106,477,631 litres every minute"
        android:textAlignment="center"
        android:textColor="#306809"
        android:textSize="35sp"
        />

    <ImageView
        android:layout_width="303dp"
        android:layout_height="303dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/waterimageconservation"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>